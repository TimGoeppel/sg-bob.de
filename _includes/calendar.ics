BEGIN:VCALENDAR
VERSION:2.0
PRODID:-//SG-BOB//Kalender 1.0//DE
{% comment %}https://www.smitscon.de/ics-dateien-erstellen/{% endcomment %}BEGIN:VTIMEZONE
TZID:CET
BEGIN:DAYLIGHT
TZOFFSETFROM:+0100
TZOFFSETTO:+0200
TZNAME:Central European Summer Time
DTSTART:20160327T020000
RRULE:FREQ=YEARLY;BYDAY=-1SU;BYMONTH=3
END:DAYLIGHT
BEGIN:STANDARD
TZOFFSETFROM:+0200
TZOFFSETTO:+0100
TZNAME:Central European Time
DTSTART:20161030T030000
RRULE:FREQ=YEARLY;BYDAY=-1SU;BYMONTH=10
END:STANDARD
END:VTIMEZONE
CALSCALE:GREGORIAN
METHOD:PUBLISH{% if include.termine %}{% assign termine = include.termine %}{% else %}{% assign termine = site.data.termine %}{% endif %}{% for termin in termine %}
BEGIN:VEVENT
SUMMARY:{{ termin.name }}
UID:{{ termin.uuid }}
DTSTART;TZID=CET:{{ termin.zeit | date: "%Y%m%d" }}{% capture hour %}{{ termin.zeit | date: "%H" }}{% endcapture %}{% unless hour == "00" %}T{{ termin.zeit | date: "%H%M%S" }}
{% if termin.zeitbis %}{% capture end_date %}{{ termin.zeit | date: "%d.%m.%Y" }} {{ termin.zeitbis }}{% endcapture %}DTEND;TZID=CET:{{ end_date | date: "%Y%m%dT%H%M%S" }}{% else %}DURATION:PT1H{% endif %}{% endunless %}
DTSTAMP;TZID=CET:{{ "now" | date: "%Y%m%dT%H%M%S" }}{% if termin.ort %}
LOCATION:{{ termin.ort}}{% endif %}{% if termin.beschreibung %}
DESCRIPTION{{ termin.beschreibung }}{% endif %}
END:VEVENT{% endfor %}
END:VCALENDAR
